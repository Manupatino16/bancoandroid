<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actualizaciondeCuenta"
    android:background="#866CB5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:text="ACTUALIZAR CUENTA"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center">

        <EditText
            android:id="@+id/etnumerocuenta"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:hint="NÃºmero de cuenta"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnbuscar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#000"
            android:text="Buscar"
            android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvbalancecuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:text="BALANCE DE CUENTA"
            android:background="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Actualizar balance"
            android:textSize="18dp"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/etactualizar"
            android:layout_width="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName" />


    </LinearLayout>

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="150dp"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#000"
        android:text="Actualizar"
        android:textAllCaps="false"
        />

</LinearLayout>